<!-- /TOOL-EARTH-TRACK-SIDEBAR -->
<script src="../assets/function/filter-map.js"></script>

<div class="commom-class-disabled map-left">
  <div id="earth-track-app" class="earth-track-app-display-by-id">
    <div class="tool_side_bar">
      <div class="country_form">
        <select
          class="form-select"
          aria-label="Default select example"
          class="choose_country"
          id="choose_country">
          {% for country in site.data['tool-analyze-the-data-map-sidebar'].index.countries %}
            <option
              {% if country['value'] == site.data['tool-analyze-the-data-map-sidebar'].index.choose %}
              selected="selected"
              {% endif %}
              value="{{ country['value'] }}">
              {{ country['name'] }}
            </option>
          {% endfor %}
        </select>

        <div class="living-earth">
          <div class="left-content">
            <img src="{{ site.data.tool-earth-track-sidebar.index.content.left-content.src }}">
          </div>
          <div class="right-content">
            <img src="{{ site.data.tool-earth-track-sidebar.index.content.right-content.src }}">
            <p>{{ site.data.tool-earth-track-sidebar.index.content.right-content.title }}</p>
          </div>
        </div>
        <div class="banner-button button-filter_earthtrack">
          {% for tool_item in site.data.tool_page.index %}
            <button
              data-value="{{ tool_item.value }}"
              type="button"
              class="tool-button-banner earthtrack">
              <img src="{{ tool_item.icon }}" alt="{{ tool_item.title }}">
              <p>{{ tool_item.title }}</p>
            </button>
          {% endfor %}
        </div>
        <div class="separated-item">
          <div class="left-item">
            <span>{{ site.data.tool-earth-track-sidebar.index.dot-infor.title }}</span>
            <img src="{{ site.data.tool-earth-track-sidebar.index.dot-infor.src }}">
          </div>
          <div class="toggle-button" onclick="toggleSwitch(this)">
            <div class="toggle-slider"></div>
          </div>
        </div>
        {% for item in site.data.tool-earth-track-sidebar.index.visualization_items %}
          <div>
            <div class="separated-item">
              <span class="repeated">{{ item.title }}</span>
              <img src="/assets/icon/questionmark.svg">
            </div>
            <div class="space-between-title-img"></div>
            <div class="separated-item-img">
              <div class="item-one image-item">
                <img src="{{ item.image_one_src }}">
                <p class="date-earth-track">{{ item.image_one_date }}</p>
              </div>
              <div class="item-two image-item">
                <img src="{{ item.image_two_src }}">
                <p class="date-earth-track">{{ item.image_two_date }}</p>
              </div>
            </div>
            <div class="separated-item-img">
              <div class="item-three image-item">
                <img src="{{ item.image_three_src }}">
                <p class="date-earth-track">{{ item.image_three_date }}</p>
              </div>
              <div class="item-four image-item">
                <img src="{{ item.image_four_src }}">
                <p class="date-earth-track">{{ item.image_four_date }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="learning_resource">
        <div class="button-tool">
          <button class="button_tool_tilte" id="learningResourceButton">{{ site.data.tool-analyze-the-data-map-sidebar.index.learning_resources.button_text1 }}</button>
          <img src="{{ site.data.tool-analyze-the-data-map-sidebar.index.arrow_img.src }}" alt="{{ site.data.tool-analyze-the-data-map-sidebar.index.arrow_img.alt }}">
        </div>
        <div class="brand_logo">
          {% for logo in site.data['tool-analyze-the-data-map-sidebar'].index.sponsor_logos %}
            <img src="{{ logo.src }}" alt="{{ logo.name }}">
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div
    id="imageModal"
    class="modal-backdrop"
    style="display: none">
    <div class="modal-content">
      <div class="close-moda-popup" onclick="closeModal()">Ã—</div>
      <img
        id="modalImage"
        src=""
        alt="Full Size Image"
        style="width: 100%;">
    </div>
  </div>
</div>

<script>
  function closeModal() {
    const modal = document.getElementById('imageModal');
    if (modal) {
      modal.style.display = 'none';
    }
  }

  function toggleSwitch(button) {
    button.classList.toggle('active');
  }

  document.addEventListener('DOMContentLoaded', function() {
    var learningResourceButton = document.getElementById('learningResourceButton');

    if (learningResourceButton) {
      learningResourceButton.addEventListener('click', function() {
        window.location.href = '/tools/learning-resources';
      });
    }
  });
</script>
<!-- /TOOL-EARTH-TRACK-SIDEBAR -->