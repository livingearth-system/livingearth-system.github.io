<div class="tool_side_bar">
  <div class="country_form">
    <select class="form-select" aria-label="Default select example" class="choose_country">
      {% for country in site.data['tool-analyze-the-data-map-sidebar'].index.countries %}
        <option value="{{ country.value }}">{{ country.name }}</option>
      {% endfor %}
    </select>

    <button
    class="sign_in_github"
    >
      {{ site.data['tool-analyze-the-data-map-sidebar'].index.knowledge_hub.button_text2 }}
    </button>
  </div>

  <div class="learning_resource">
    <a href="{{ site.data.tool-analyze-the-data-map-sidebar.index.knowledge_hub.button_url }}">
      <div class="button-tool">
        <button class="button_tool_tilte" id="knowledge_hubButton">
          {{ site.data['tool-analyze-the-data-map-sidebar'].index.knowledge_hub.button_text1 }}
        </button>
        <img
          src="{{ site.data.tool-analyze-the-data-map-sidebar.index.arrow_img.src }}"
          alt="{{ site.data.tool-analyze-the-data-map-sidebar.index.arrow_img.alt }}"
        >
      </div>
    </a>
    <div class="brand_logo">
      {% for logo in site.data['tool-analyze-the-data-map-sidebar'].index.sponsor_logos %}
        <img src="{{ logo.src }}" alt="{{ logo.name }}">
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var learningResourceButton = document.getElementById('knowledge_hubButton');

    if (knowledge_hubButton) {
      knowledge_hubButton.addEventListener('click', function () {
        window.location.href = '/tools/knowledge_hub';
      });
    }

    const option = document.querySelector('.country_form select');
    option.addEventListener('change', () => {
      if (option.value.toUpperCase() === 'WALES') {
        window.location.href = 'https://hub.livingwales.space/hub/spawn';
      } else if (option.value.toUpperCase() === 'AUSTRALIA')
        window.location.href = 'https://app.sandbox.dea.ga.gov.au';
    });
  });
</script>
