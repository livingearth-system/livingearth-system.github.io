{%- if include.title -%}
  {% assign title = include.title | default: page.title %}
{% else %}
  {% assign title = page.heading | default: page.title %}
{% endif %}
{% assign header = include.header | default: page.header %}
{% assign subtitle = include.subtitle | default: page.subtitle %}
{% assign subtitleArray = page.subtitle | split: ';' %}
{% assign titleclass = include.titleclass | default: page.titleclass %}
{% assign background = include.background | default: page.background %}
{% assign image = include.image | default: page.image %}
{% assign alt = include.alt | default: page.alt %}
{% assign nobuttons = include.nobuttons | default: page.nobuttons %}
{% assign button1 = include.button1 | default: page.button1 %}
{% assign button1_url = include.button1_url | default: page.button1_url %}
{% assign button2 = include.button2 | default: page.button2 %}
{% assign button2_url = include.button2_url | default: page.button2_url %}
{% assign Nosvg = include.Nosvg | default: page.Nosvg %}
{% assign Noheader = include.Noheader | default: page.Noheader %}

<!-- HEADING -->
<header
  class="row position-relative mx-0 heading {{ titleclass }}"
  style="background: {{ background | default: "#000000" }};"
>
  <div class="col-md-5 position-relative m-0 p-0">
    <div class="mx-md-5 d-flex flex-column h-100 main-content"></div>
  </div>
  <div class="col-md-7 position-relative m-0 p-0">
    <div class="country_subpage-img-layer" style="background: {{ background }} {{ background }}"></div>
    {% if page.url == '/contact/' %}
      {%- if image -%}
        <img class="country_subpage-benner-img-contact" src="{{ image }}" alt="{{ alt | default: title }}">
      {%- endif %}
    {% endif %}
    {% if page.url != '/contact/' %}
      {%- if image -%}
        <img class="country_subpage-benner-img" src="{{ image }}" alt="{{ alt | default: title }}">
      {%- endif %}
    {% endif %}
  </div>
  <div class="dsc-about-page container-fluid">
    <div class="row text-white">
      <div class="col-12">
        <div class="row text-white">
          <div class="col-12">
            {%- include breadcrumbs.liquid -%}
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="dsc-about-inner col-12 col-md-5">
        {%- if header and Noheader == true -%}
          <h5 class="mb-3 mb-md-4 text-uppercase">{{ header }}</h5>
        {% endif %}
        {%- if title -%}
          <h3 class="mb-3 mb-md-4">{{ title }}</h3>
        {% endif %}
        {%- if subtitleArray.size > 0 -%}
          <div class="mb-3 mb-md-4">
            {% for item in subtitleArray %}
              <div class="subtitle">
                <p class="checkbox-heading">
                  {%- if Nosvg == true -%}
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                      <g id="CheckCircle">
                      <path id="Vector" d="M10.765 6.235C10.8352 6.30531 10.8747 6.40062 10.8747 6.5C10.8747 6.59938 10.8352 6.69469 10.765 6.765L7.265 10.265C7.19469 10.3352 7.09938 10.3747 7 10.3747C6.90063 10.3747 6.80532 10.3352 6.735 10.265L5.235 8.765C5.16876 8.69391 5.1327 8.59989 5.13442 8.50274C5.13613 8.40559 5.17549 8.3129 5.24419 8.24419C5.3129 8.17548 5.40559 8.13613 5.50274 8.13441C5.59989 8.1327 5.69392 8.16876 5.765 8.235L7 9.46937L10.235 6.235C10.3053 6.16477 10.4006 6.12533 10.5 6.12533C10.5994 6.12533 10.6947 6.16477 10.765 6.235ZM14.375 8C14.375 9.26086 14.0011 10.4934 13.3006 11.5418C12.6001 12.5901 11.6045 13.4072 10.4396 13.8897C9.27473 14.3722 7.99293 14.4985 6.7563 14.2525C5.51967 14.0065 4.38376 13.3994 3.4922 12.5078C2.60064 11.6162 1.99348 10.4803 1.7475 9.2437C1.50152 8.00707 1.62776 6.72527 2.11027 5.56039C2.59278 4.39551 3.40988 3.39988 4.45824 2.69938C5.50661 1.99889 6.73915 1.625 8 1.625C9.69015 1.62698 11.3105 2.29927 12.5056 3.49439C13.7007 4.6895 14.373 6.30985 14.375 8ZM13.625 8C13.625 6.88748 13.2951 5.79994 12.677 4.87492C12.0589 3.94989 11.1804 3.22892 10.1526 2.80318C9.12476 2.37743 7.99376 2.26604 6.90262 2.48308C5.81148 2.70012 4.8092 3.23585 4.02253 4.02252C3.23586 4.80919 2.70013 5.81147 2.48309 6.90262C2.26604 7.99376 2.37744 9.12476 2.80318 10.1526C3.22892 11.1804 3.94989 12.0589 4.87492 12.677C5.79995 13.2951 6.88748 13.625 8 13.625C9.49134 13.6233 10.9211 13.0302 11.9757 11.9756C13.0302 10.9211 13.6233 9.49133 13.625 8Z" fill="white"/>
                      </g>
                    </svg>
                  {%- endif -%}
                </p>
                <p class="heading-subtitle">{{ item }}</p>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
    <div class="country-subpage-welcome-living-button d-flex justify-content-xs-center justify-content-md-start mt-3">
      {%- if nobuttons != true -%}
        {%- if button1 != 'none' -%}
          <button
            type="button"
            onclick="location.href='{{ button1_url | default: "/contact/" }}'"
            class="country-subpage-search"
          >
            {{ button1 | default: 'Contact Us' }}
          </button>
        {%- endif %}
        {%- if button2 != 'none' -%}
          <button
            type="button"
            onclick="location.href='{{ button2_url | default: "/contribute/" }}'"
            class="country-subpage-get-in-touch"
          >
            {{ button2 | default: 'Contribute' }}
          </button>
        {%- endif %}
      {% endif %}
    </div>
  </div>
</header>
<!-- /HEADING -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.location.pathname === '/contact/') {
      var elements = document.querySelectorAll('.heading-subtitle');
      elements.forEach(function(element) {
        element.style.display = 'none';
      });
  
      var headingElement = document.querySelector('.heading');
      if (headingElement) {
        headingElement.style.height = '350px';
      }
    }
  });
</script>
