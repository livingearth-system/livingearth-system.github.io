{%- if include.title -%}
  {% assign title = include.title | default: page.title %}
{% else %}
  {% assign title = page.heading | default: page.title %}
{% endif %}
{% assign header = include.header | default: page.header %}
{% assign subtitle = include.subtitle | default: page.subtitle %}
{% assign subtitleArray = page.subtitle | split: ';' %}
{% assign titleclass = include.titleclass | default: page.titleclass %}
{% assign background = include.background | default: page.background %}
{% assign image = include.image | default: page.image %}
{% assign alt = include.alt | default: page.alt %}
{% assign nobuttons = include.nobuttons | default: page.nobuttons %}
{% assign button1 = include.button1 | default: page.button1 %}
{% assign button1_url = include.button1_url | default: page.button1_url %}
{% assign button2 = include.button2 | default: page.button2 %}
{% assign button2_url = include.button2_url | default: page.button2_url %}
{% assign Nosvg = include.Nosvg | default: page.Nosvg %}
{% assign Noheader = include.Noheader | default: page.Noheader %}

<!-- HEADING -->
<header
  class="row position-relative mx-0 heading {{ titleclass }}"
  style="background: {{ background | default: "#000000" }};"
>
  <div class="col-md-5 position-relative m-0 p-0">
    <div class="mx-md-5 d-flex flex-column h-100 main-content"></div>
  </div>
  <div class="col-md-7 position-relative m-0 p-0">
    <div class="country_subpage-img-layer" style="background: {{ background }} {{ background }}"></div>
    {% if page.url == '/contact/' %}
      {%- if image -%}
        <img class="country_subpage-benner-img-contact" src="{{ image }}" alt="{{ alt | default: title }}">
      {%- endif %}
    {% endif %}
    {% if page.url != '/contact/' %}
      {%- if image -%}
        <img class="country_subpage-benner-img" src="{{ image }}" alt="{{ alt | default: title }}">
      {%- endif %}
    {% endif %}
  </div>
  <div class="dsc-about-page container-fluid">
    <div class="row text-white">
      <div class="col-12">
        <div class="row text-white">
          <div class="col-12">
            {%- include breadcrumbs.liquid -%}
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="dsc-about-inner col-12 col-md-5">
        {%- if header and Noheader == true -%}
          <h5 class="mb-3 mb-md-4 text-uppercase">{{ header }}</h5>
        {% endif %}
        {%- if title -%}
          <h3 class="mb-3 mb-md-4">{{ title }}</h3>
        {% endif %}
        {%- if subtitleArray.size > 0 -%}
          <div class="mb-3 mb-md-4">
            {% for item in subtitleArray %}
              <div class="subtitle">
                {%- if Nosvg == true -%}
                  <p class="checkbox-heading">
                  </p>
                {%- endif -%}
                <p class="heading-subtitle">{{ item }}</p>
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
    <div class="country-subpage-welcome-living-button d-flex justify-content-xs-center justify-content-md-start mt-3">
      {%- if nobuttons != true -%}
        {%- if button1 != 'none' -%}
          <a
            href="{{ button1_url | default: "/contact/" }}"
            class="country-subpage-search"
          >
            {{ button1 | default: 'Contact Us' }}
          </a>
        {%- endif %}
        {%- if button2 != 'none' -%}
          <a
            href="{{ button2_url | default: "/contribute/" }}"
            class="country-subpage-get-in-touch"
          >
            {{ button2 | default: 'Contribute' }}
          </a>
        {%- endif %}
      {% endif %}
    </div>
  </div>
</header>
<!-- /HEADING -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.location.pathname === '/contact/') {
      var elements = document.querySelectorAll('.heading-subtitle');
      elements.forEach(function(element) {
        element.style.display = 'none';
      });
  
      var headingElement = document.querySelector('.heading');
      if (headingElement) {
        headingElement.style.height = '350px';
      }
    }
  });
</script>
